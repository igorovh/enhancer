{
    "name": "Twitch Enhancer",
    "description": "Extension that adds what is missing on Twitch.",
    "version": "4.0.5",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "js": ["inject.js", "content.js"],
            "all_frames": true,
            "css": ["bundle.css"]
        }
    ],
    "background": {
        "scripts": ["worker.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "index.js",
        "bundle.css",
        "img/*.png",
        "img/*.svg",
        "img/*.jpg",
        "sounds/*.ogg",
        "sounds/*.mp3"
    ],
    "permissions": ["storage", "*://*.twitch.tv/*"],
    "icons": {
        "128": "img/icon.png"
    }
}
